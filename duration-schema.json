  "$comment": "This schema may be used for any time measurement",
  "fileVersion": "1.1",
  "fileDate":"2026-02-12",  
  "schema": {
    "oneOf": [
       {
        "type": "string",
        "pattern": "^([0-9]+(.[0-9]+)?)(((n|&micro;|m)?s)|min|hrs|days|wks|mon|yrs)$"
      },
      {
        "type": "object",
        "properties": {
          "value": {"type": "number"},
          "units": {
            "type": "string",
            "enum": [
              "ns","nanoseconds",
              "&micro;s","microseconds",
              "ms","milliseconds",
              "s","secs","seconds",
              "mins","minutes",
              "hrs","hours",
              "days",
              "wks","weeks",
              "yrs","years"
            ]
          }
        },
        "required": ["value","units"]
      }
    ]
  }
}